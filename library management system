----- library management system -----
uname = input('enter your name :- ')
late_day = int(input('enter late day :- '))
print('name :- ',uname)
print('late days :- ',late_day)
fine = 0
if late_day == 0 :
    print('thank you for co-operate')
elif late_day  <= 5 :
    fine += (late_day * 2)
    print('your charges :- ' , fine)
elif late_day  <= 10 :
    fine += (late_day * 3)
    print('your charges :- ' , fine)
else :
    fine += (late_day * 5)
    print('your charges :- ' , fine)
 
